<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScanFragment">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <TextView
        android:id="@+id/barcode_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginLeft="@dimen/btnMargin"
        android:layout_marginRight="@dimen/btnMargin"
        app:layout_constraintTop_toBottomOf="@id/surface_view"
        android:layout_marginTop="@dimen/btnMarginTop"
        android:text="Barcode number"
        android:textSize="@dimen/btnTextSize"
        android:padding="@dimen/btnPadding"/>

    <Button
        android:textColor="@color/white"
        android:id="@+id/btnCamera"
        android:text="@string/reset_camera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginLeft="@dimen/btnMargin"
        android:layout_marginRight="@dimen/btnMargin"
        app:layout_constraintTop_toBottomOf="@id/surface_view"
        android:layout_marginTop="@dimen/btnMarginTop"
        android:textSize="@dimen/btnTextSize"
        android:padding="@dimen/btnPadding"/>

    <Button
        android:textColor="@color/white"
        android:id="@+id/btnViewProduct"
        android:text="@string/view_product"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginLeft="@dimen/btnMargin"
        android:layout_marginRight="@dimen/btnMargin"
        app:layout_constraintTop_toBottomOf="@id/surface_view"
        android:layout_marginTop="@dimen/btnMarginTop"
        android:textSize="@dimen/btnTextSize"
        android:padding="@dimen/btnPadding"/>

</LinearLayout>